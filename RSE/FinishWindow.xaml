<Window x:Class="RSE.FinishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSE"
        mc:Ignorable="d"
         Height="450" Width="390"
   HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="390" MaxHeight="450" >
    <Grid Margin="-2,0,-94.667,-29.333" Height="450" VerticalAlignment="Top" HorizontalAlignment="Left" Width="390" Background="#FF54CEDF">


        <Grid Height="382" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="338" Background="White" Margin="24,0,0,27"/>


        <Label x:Name="Test" Content="You've completed the test" Height="65" Margin="49,55,0,330" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="290" HorizontalAlignment="Left" Background="White" Foreground="#FF54CEDF"  FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="24"  RenderTransformOrigin="0.655,-1.374"  />
        <DataGrid Name="dataGridAnswer" Margin="74,112,0,120" AutoGenerateColumns="True" Background="White" HorizontalAlignment="Left" Width="238">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding }" Width="25" />
                <DataGridTextColumn Header="Your Answer" Binding="{Binding }" Width="100"/>
                <DataGridTextColumn Header="Right Answer" Binding="{Binding RouteName}" Width="100"/>

            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="Answer" Height="30" Margin="147,350,0,70" TextWrapping="Wrap" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="97" HorizontalAlignment="Left" Background="White" BorderBrush="#FF54CEDF" />
        <Button x:Name="Next" Content="Another option" Margin="49,385,0,0" VerticalAlignment="Top" Height="31" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="118" HorizontalAlignment="Left"  Background="#FF54CEDF" Foreground="White" BorderBrush="White" FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="16"/>
        <Button x:Name="Teacher" Content="Find a teacher" Margin="221,385,0,0" VerticalAlignment="Top" Height="31" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="118" HorizontalAlignment="Left"  Background="#FF54CEDF" Foreground="White" BorderBrush="White" FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="16" RenderTransformOrigin="0.518,1.704"/>




    </Grid>
</Window>