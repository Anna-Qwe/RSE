        <Button x:Name="ButtonClick_Finish" Content="Finish" Margin="31.333,248,0,-9" VerticalAlignment="Top" Height="31" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="118" HorizontalAlignment="Left"  Background="White" Foreground="DarkGreen" FontFamily="Comic Sans Ms" FontSize="16" Grid.Column="1"/>



    </Grid>
</Window>
