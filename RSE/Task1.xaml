        mc:Ignorable="d"
        Height="330" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="300" MaxHeight="400" MinWidth="290" MinHeight="160">
    <Grid Margin="0,1,0,-0.333" Height="270" VerticalAlignment="Top" HorizontalAlignment="Left" Width="291">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="236*"/>
        </Grid.ColumnDefinitions>
        <Image Stretch="None" Source="http://uv-kurier.ru/wp-content/uploads/2018/04/matematika-b-2-1024x735.jpg" Margin="0,-25,-0.333,-29" Grid.ColumnSpan="2" />
        <Label x:Name="Label_task" Height="136" Margin="29,0,0,134" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="239" HorizontalAlignment="Left" Background="White" RenderTransformOrigin="0.655,-1.374" Grid.ColumnSpan="2" />
        <TextBox x:Name="TextBox_Answer" Height="30" Margin="9.333,156,0,84" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="172" HorizontalAlignment="Left" SelectionChanged="" Background="White" Grid.Column="1" TextChanged="Answer_TextChanged_1" />
