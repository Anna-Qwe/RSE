<Window x:Class="RSE.ChooseVariant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSE"
        mc:Ignorable="d"
        Height="390" Width="290" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="300" MaxHeight="400" Background="LightBlue" Foreground="DeepPink" MinWidth="290" MinHeight="160">
  <Grid Margin="0,1,0,-0.333" Height="270" VerticalAlignment="Top" HorizontalAlignment="Left" Width="291">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="55*"/>
      <ColumnDefinition Width="236*"/>
    </Grid.ColumnDefinitions>
    <Image Stretch="None" Source="http://uv-kurier.ru/wp-content/uploads/2018/04/matematika-b-2-1024x735.jpg" Margin="0,-54,9.667,-90" Grid.ColumnSpan="2" />
    <Label x:Name="Choose" Content="Choose variant" Margin="18,35,0,0" VerticalAlignment="Top" Height="94" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="245" HorizontalAlignment="Left" Background="White" Foreground="DarkGreen" FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="30" Grid.ColumnSpan="2"/>
    <ComboBox Name="comboBox1" Grid.Column="1" Margin="10.333,160,52.667,44">
      <ComboBoxItem Content="Variant1" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18"/>
      <ComboBoxItem Content="Variant2" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18"/>
      <ComboBoxItem Content="Variant3" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18"/>
      <ComboBoxItem Content="Variant4" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18"/>
      <ComboBoxItem Content="Variant5" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18"/>
    </ComboBox>
    <Button x:Name="Start" Content="Start" Margin="29.333,300,0,-67" VerticalAlignment="Top"  Height="37" HorizontalAlignment="Left" Width="120" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14" Grid.Column="1"/>


  </Grid>
</Window>
