        <Button x:Name="Start" Content="Start" Margin="52.667,287,0,0" VerticalAlignment="Top"  Height="46" HorizontalAlignment="Left" Width="176" Background="White" Foreground="DarkGreen" FontWeight="Bold" FontFamily="Times New Roman" FontSize="20" Grid.Column="1" Grid.ColumnSpan="2"/>


