<Window x:Class="RSE.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSE"
        mc:Ignorable="d"
        Height="390" Width="390" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="300" MaxHeight="400" MinWidth="290" MinHeight="160">
    <Grid Margin="0,1,0,-0.333" Height="270" VerticalAlignment="Top" HorizontalAlignment="Left" Width="291">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="236*"/>
        </Grid.ColumnDefinitions>
        <Image Stretch="None" Source="http://uv-kurier.ru/wp-content/uploads/2018/04/matematika-b-2-1024x735.jpg" Margin="0,-27,-99.333,-93" Height="390" Width="390" Grid.ColumnSpan="2" HorizontalAlignment="Left" />
        <TextBox  Name="TextBoxDesc" Height="169" Margin="29,0,-66.333,101" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="328" HorizontalAlignment="Left" Background="White" RenderTransformOrigin="0.655,-1.374" Grid.ColumnSpan="2" DataContext="{Binding Exercise.Description}" />
        <TextBox Name="TextBoxAnswer" Height="30" Margin="41.333,195,0,45" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="185" HorizontalAlignment="Left"  Background="White" Grid.Column="1"  />
        <Button Click="ButtonNext_Click"  Content="Next task" Margin="166.333,249,-48.333,-10" VerticalAlignment="Top" Height="31" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="118" HorizontalAlignment="Left"  Background="White" Foreground="DarkGreen" FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="16" Grid.Column="1"/>
        <Button Click="ButtonPrevious_Click" Content="Previous task" Margin="0.333,249,0,-10" VerticalAlignment="Top" Height="31" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="118" HorizontalAlignment="Left"  Background="White" Foreground="DarkGreen" FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="16" Grid.Column="1"/>
        <Button Click="ButtonFinish_Click" Content="Finish" Margin="75.333,306,0,-67" VerticalAlignment="Top" Height="31" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="118" HorizontalAlignment="Left"  Background="White" Foreground="DarkGreen" FontWeight="UltraBold" FontFamily="Times New Roman" FontSize="16" Grid.Column="1"/>

    </Grid>

</Window>
